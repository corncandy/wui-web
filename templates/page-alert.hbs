 <div id="alert-pop" style="position: fixed; top: 60px; z-index: 1060; width: 100%;">
     {{#if success}}
      <div
              style="position: relative;
                      width: 360px;
                      border: 1px solid #8dcdf3;
                      border-radius: 5px;
                      box-shadow: 0 0 6px #279fe5;
                      margin: 0 auto;
                      background: #FFFFFF;
                      font-size: 20px;
                      color: #279fe5;
                      line-height: 60px;
                      padding-left: 50px;
                      overflow: hidden;"
      >
          <img style=" position: absolute; top: 20px; left: 15px;" src="../images/upp/success-icon.png" />
          {{message}}
      </div>
     {{else}}
         <div
                 style="position: relative;
                      width: 360px;
                      border-radius: 5px;
                      margin: 0 auto;
                      background: #FFFFFF;
                      font-size: 20px;
                      line-height: 60px;
                      padding-left: 50px;
                      overflow: hidden;
                      color: #df4a32;
                      border: 1px solid #ffa293;
                      box-shadow: 0 0 6px #df4a32;"
         >
             <img style=" position: absolute; top: 20px; left: 15px;" src="../images/upp/fail-icon.png" />
           {{message}}
         </div>
     {{/if}}
  </div>
